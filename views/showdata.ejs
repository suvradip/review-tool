<!DOCTYPE html>
<html>
<head>
	<title>Show Data - FusionCharts</title>
	<link rel="stylesheet" type="text/css" href="<%= site_root%>css/style.css">
	<!-- angularjs install -->
	<script type="text/javascript" src="<%= site_root%>bower_components/angular/angular.min.js"></script>
	<!-- a js file for angular operation -->
    <script type="text/javascript" src="<%= site_root%>webapp/app.showdata.js"></script>
</head>
<body>
	<!-- header template include -->
	<% include layouts/header.ejs %>
	<div class="content" ng-app='showdata' >
		<div class="container" ng-controller='dataSection' ng-init='showAllReviews("<%= site_root%>")'>
			<div class="row">
				<div class="col-lg-12">
					<section >
						<div class="data-wrapper" >
							<table class="table">
								<thead>
									<tr>
										<th class="name">Name</th>
										<th class="chart-type">Information</th>
										<th class="reviews">Review</th>
										<th class="screenshot">Screenshot</th>
										<th class="data">Data</th>
									</tr>
								</thead>
								<tbody>
								<tr  ng-if="reviews.length === 0">
									<td align="center" colspan="5">No data to display</td>	
								</tr>
									<tr  ng-if="reviews.length > 0" ng-repeat="unit in reviews">
										<td>{{ unit.name }}</td>
										<td>
											<div><strong>Width:</strong>{{ unit.width }}</div>
											<div><strong>Height:</strong>{{ unit.height }}</div>
											<div><strong>Build:</strong>{{ unit.build }}</div>
										</td>
										<td>{{ unit.review }}</td>
										<td><div class="attachment"><a href="<%= site_root%>screenshots/{{ unit.ssid }}">screenshots.png</a></div></td>
										<td><pre><code>{{ unit.data }}</code></pre></td>
									</tr>										
								</tbody>
							</table>
						</div>
					</section>
				
				</div>
			</div>
		</div>
	</div>
	<!-- footer template include -->
	<% include layouts/footer.ejs %>
</body>
</html>
