<!DOCTYPE html>
<html>
<head>
	<title></title>
	<!-- head template inlude -->
	<% include layouts/head.ejs %>
	<!-- installing fusioncharts  -->
	<script type="text/javascript" src="<%= site_root%>bower_components/fusioncharts/fusioncharts.js"></script>
	<!-- installing fusioncharts zune theme -->
	<script type="text/javascript" src="<%= site_root%>bower_components/fusioncharts/themes/fusioncharts.theme.zune.js"></script>
	<!-- installing fusioncharts angular plugin  -->
	<script type="text/javascript" src="<%= site_root%>bower_components/fusioncharts-angular/angular-fusioncharts.js"></script>
	<!-- a js file for angular operation -->
    <script type="text/javascript" src="<%= site_root%>webapp/app.js"></script>
</head>
<body>
	<!-- header template include -->
	<% include layouts/header.ejs %>
	<div class="content" ng-app='reviewapp' >
		<div class="container" ng-controller='reviewSection' ng-init="loadAllReviews('<%= site_root%>')">
			<div class="row">
				<div class="col-lg-12">
					<section >
						<div class="chart-wrapper" >
							<fusioncharts
								width="800"
								height="440"
								type="column2d"
								dataformat="json"
								chartid ="mychart"
								datasource= {{data}}
							></fusioncharts>
						</div>
					</section>
					<section >
						<div class="review-section">
							<div class="review-form">
								<textarea name="" id="" cols="30" rows="5" ng-model="review"></textarea>
								<input type="submit" value="Post" class="btn btn-info btn-large clearfix" ng-click="postReview()">
							</div>
						</div>
						<div class="reviews">
							<ul>
								<li ng-repeat='unit in posts'>
									<div class="reviewer">
										<img src="" alt="" width="80" height="80" ng-src='<%= site_root%>images/{{ unit.avatar }}' >
										<div class="reviewer-name">{{ unit.name }}</div>
										<div class="review-date small">{{ unit.time }}</div>
										<div class="review-date small">{{ unit.date }}</div>
									</div>
									<div class="review-info">{{ unit.review }}
										<div class="attachment"><a  href="<%= site_root%>screenshots/{{ unit.ssid }}">screenshots.png</a></div>
									</div>
								</li>
							</ul>
						</div>
					</section>
				</div>
			</div>
		</div>
	</div>
	<!-- footer template include -->
	<% include layouts/footer.ejs %>
</body>
</html>
